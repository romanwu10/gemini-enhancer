{
  "manifest_version": 3,
  "name": "Gemini Enhancer",
  "version": "1.7",
  "description": "Ask follow-ups with native-feeling UI, robust slash commands, and reliable autosave on gemini.google.com.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://gemini.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://gemini.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Manage Slash Commands",
    "default_popup": "popup.html"
  }
}
